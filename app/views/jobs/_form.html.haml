=simple_form_for(@job, html: {class: 'form-horizontal'}) do |f|
 =f.collection_select :category_id,Category.all,:id,:name,{prompt: "Choose a category"},input_html: {class: "dreopdown-toggle"}
 =f.input :title , label: "Job title",input_html: {class: "form_control"}
 =f.input :description , label: "Job Description",input_html: {class: "form_control"}
 =f.input :company , label: "Company" ,input_html: {class: "form_control"}
 =f.input :url , label: "Link to Job",input_html: {class: "form_control"}
 %br/
 =f.button :submit